"Use comma instead of backslash for leader commands
let mapleader = ","

"no line numbers
set nonumber

"allow hidden buffers which does stuff like preserve undo history
set hidden

"set swap and backup files dir so that they don't clutter work areas
set backupdir=/tmp
set directory=/tmp

"set up bash-style tab-completion
set wildmode=list:longest

"Have modal stuff be visible
set showcmd
set showmode

"Buffer switching shortcuts
nnoremap <C-N> :bnext<CR>
nnoremap <C-P> :bprev<CR>

"This command switches on spell checking
"(note: use 'setfiletype text' instead of this)
"set spell spelllang=en_us

"purty colors
syntax on
colorscheme slate

"Nice font for gvim
"set guifont=Bitstream\ Vera\ Sans\ Mono\ 9

"NERD tree plugin
map <leader>d :execute 'NERDTreeToggle ' . getcwd()<CR>

