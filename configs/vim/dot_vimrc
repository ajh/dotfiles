"Get out of the stone age
set nocompatible

"Use comma instead of backslash for leader commands
let mapleader = ","

"no line numbers
set nonumber

"allow hidden buffers which does stuff like preserve undo history
set hidden

"set swap and backup files dir so that they don't clutter work areas
set backupdir=/tmp
set directory=/tmp

"set up bash-style tab-completion
set wildmode=list:longest

"Have modal and state stuff be visible
set showcmd
set showmode
set ruler

"Configure filetype support
filetype plugin indent on

"Some shortcuts
" * scroll up and down 10 lines at a time
noremap <C-K> 10k
noremap <C-J> 10j

"purty colors
syntax on
"colorscheme slate

"Refresh help file tags for plugins
helptags ~/.vim/doc

"load matchit plugin (needs a system install version of matchit.)
runtime! macros/matchit.vim

"NERD tree plugin
map <leader>d :execute 'NERDTreeToggle ' . getcwd()<CR>

"project plugin
function! s:ToggleProject()
  if exists('g:proj_running') && bufwinnr(g:proj_running) != -1 
    " already visible
    :execute "bwipe " . g:proj_running
  else
    Project
  endif
endfunction
map <leader>p :call <SID>ToggleProject()<CR>

"fuzzyfinder
map <leader>f :FuzzyFinderFile<CR>
map <leader>b :FuzzyFinderBuffer<CR>
map <leader>r :FuzzyFinderMruFile<CR>

"Use my aliased grep that excludes svn directores amoung other things
set grepprg=svngrep\ --line-number\ $*\ /dev/null

"I'm starting to think I always want these...
set shiftwidth=2
set tabstop=2
set expandtab

"Have :!{cmd} use an interactive shell so I have my shopts and aliases
set shellcmdflag=-ic
