# file list 
alias ls='ls -G'
alias ll='ls -l'
alias la='ls -la'
alias less='less -R'

# development
alias nosvn='grep -v \.svn'
alias svndiff='svn diff -x -w'
#alias exgrep="grep --exclude='*.svn*' --exclude='tags' --exclude='*log*'"
alias svn_add_new="svn st | grep '?' | tr -s ' ' | cut -d ' ' -f 2 | xargs svn add"
alias db_rebuild="rake db:reset && rake spec:db:fixtures:load && rake db:test:prepare && rake ts:rebuild"
alias upst="echo 'svn up; svn st' | sh -x"

# frequently used directories
alias aspen="cd -P ~/devel/aspen"
alias rutab="cd -P ~/devel/rutab"
alias dotfiles="cd -P ~/devel/dotfiles"
