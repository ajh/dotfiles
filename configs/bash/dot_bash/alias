# file list 
alias ls='ls -G'
alias ll='ls -l'
alias la='ls -la'
alias less='less -R'

# development
alias nosvn='grep -v \.svn'
alias svndiff='svn diff -x -w'
# requires grep 2.5.3 for the --exclude-dir option
alias svngrep="grep --exclude-dir='\.svn' --exclude-dir='public/system' --exclude-dir='tmp' --exclude='tags' --exclude='*.log' --binary-files=without-match"
alias svn_add_new="svn st | grep '?' | tr -s ' ' | cut -d ' ' -f 2 | xargs svn add"
alias db_rebuild="rake db:reset && rake spec:db:fixtures:load && rake db:test:prepare && rake ts:rebuild && rm -rf public/system/*"
alias upst="echo 'svn up; svn st' | sh -x"

# frequently used directories
alias aspen="cd -P ~/devel/aspen"
alias snowbell="cd -P ~/devel/snowbell"
alias dotfiles="cd -P ~/devel/dotfiles"
